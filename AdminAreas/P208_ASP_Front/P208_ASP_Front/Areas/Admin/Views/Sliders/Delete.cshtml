@model P208_ASP_Front.Models.Slider

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

@if(ViewBag.DeleteError != null)
{
    <div class="alert alert-danger">
        <p>@ViewBag.DeleteError</p>
    </div>
}

<h3>Are you sure you want to delete this Slider?</h3>
<div>
    <h4>Slider</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Image)
        </dt>

        <dd>
            <img src="~/Public/img/intro/@Model.Image" width="300" />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.SubTitle)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SubTitle)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger btn-lg" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
